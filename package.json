{
  "name": "bashbros",
  "version": "0.1.1",
  "description": "The Bash Agent Helper",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bashbros": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup && npm run copy-static",
    "copy-static": "node -e \"const fs=require('fs');fs.mkdirSync('dist/static',{recursive:true});fs.cpSync('src/dashboard/static','dist/static',{recursive:true})\"",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "bash",
    "cli",
    "agent",
    "security",
    "pty",
    "claude",
    "ai",
    "automation"
  ],
  "author": "GhostPeony",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GhostPeony/bashbros.git"
  },
  "homepage": "https://bashbros.ai",
  "bugs": {
    "url": "https://github.com/GhostPeony/bashbros/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "express": "^5.2.1",
    "inquirer": "^9.2.0",
    "node-pty": "^1.0.0",
    "winston": "^3.13.0",
    "ws": "^8.19.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.18.1",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
